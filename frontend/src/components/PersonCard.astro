---
const {
    title,
    subtitle,
    href,
    image,
    alt,
    class: className,
    ...rest
} = Astro.props;

import { Image } from "astro:assets";
---

<div
    class:list={["flex flex-col relative justify-end items-center", className]}
    {...rest}
>
    <div class="flex flex-col gap-3 py-6">
        <h5 class="text-2xl text-white font-bold z-10">{title}</h5>
        <p class="text-lg text-white font-bold z-10">{subtitle}</p>
        <a href={href} class="text-white font-bold z-10">
            Leggi di pi√π
            <i class="fas fa-arrow-right text-white"></i>
        </a>
    </div>
    <Image
        class="w-full h-full rounded-lg object-cover absolute"
        src={image}
        alt={alt}
    />
    <!-- Overlay -->
    <div
        class="absolute inset-0 bg-gradient-to-t from-[rgba(0,89,203,0.50)] to-transparent to-50% z-0"
    >
    </div>
</div>
