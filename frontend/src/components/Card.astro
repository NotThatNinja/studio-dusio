---
const { title, href, image, alt, class: className, ...rest } = Astro.props;
---

<service-card
    class:list={[
        "flex flex-col relative justify-center items-center rounded-lg bg-blue cursor-pointer",
        className,
    ]}
    {...rest}
    href={href}
>
    <div class="flex flex-col gap-3 py-6">
        <h5 class="text-2xl text-white font-bold z-10 text-center">{title}</h5>
        <a href={href} class="text-white font-bold z-10 text-center">
            Scopri di pi√π
            <i class="fas fa-arrow-right text-white"></i>
        </a>
    </div>
</service-card>

<script>
    class Card extends HTMLElement {
        connectedCallback() {
            this.addEventListener("click", () => {
                window.location.href = this.querySelector("a").href;
            });
        }
    }

    customElements.define("service-card", Card);
</script>
