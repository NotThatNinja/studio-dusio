---
import H4 from "../Typography/H4.astro";
import H3 from "../Typography/H3.astro";
import TABLE from "../Table/TABLE.astro";
import TH from "../Table/TH.astro";
import TD from "../Table/TD.astro";

const currentMonth = new Date().toLocaleString("it-IT", { month: "short" });
---

<section
    class="flex flex-col md:flex-row px-4 py-8 xl:px-36 lg:px-18 md:px-9 md:py-12 gap-10 md:gap-20 bg-blue-2"
>
    <div class="flex flex-col gap-4 md:w-1/2">
        <H4 icon="fa-clock">Orari - {currentMonth} 25</H4>
        <H3>Visite <span class="text-green">ambulatoriali</span></H3>
        <TABLE>
            <tr>
                <TH>Lunedì</TH>
                <TD>14:30 - 18.30</TD>
            </tr>
            <tr>
                <TH>Martedì</TH>
                <TD>14:30 - 18.30</TD>
            </tr>
            <tr>
                <TH>Mercoledì</TH>
                <TD>14.30 - 16.30</TD>
            </tr>
            <tr>
                <TH>Giovedì</TH>
                <TD>09.00 - 12.30</TD>
            </tr>
            <tr>
                <TH>Venerdì</TH>
                <TD>9.30 - 13.00</TD>
            </tr>
            <tr>
                <TH>Sabato</TH>
                <TD>Chiuso</TD>
            </tr>
            <tr>
                <TH>Domenica</TH>
                <TD>Chiuso</TD>
            </tr>
        </TABLE>
    </div>
    <div class="flex flex-col gap-4 md:w-1/2">
        <H4 icon="fa-clock">Orari - {currentMonth} 25</H4>
        <H3><span class="text-green">Segreteria</span></H3>
        <TABLE>
            <tbody>
                <tr>
                    <TH>Lunedì</TH>
                    <TD>15:00 - 17.00</TD>
                </tr>
                <tr>
                    <TH>Martedì</TH>
                    <TD>14:30 - 16.30</TD>
                </tr>
                <tr>
                    <TH>Mercoledì</TH>
                    <TD>14:30 - 16.30</TD>
                </tr>
                <tr>
                    <TH>Giovedì</TH>
                    <TD>10:00 - 12.00</TD>
                </tr>
                <tr>
                    <TH>Venerdì</TH>
                    <TD>10:00 - 12.00</TD>
                </tr>
                <tr>
                    <TH>Sabato</TH>
                    <TD>Chiuso</TD>
                </tr>
                <tr>
                    <TH>Domenica</TH>
                    <TD>Chiuso</TD>
                </tr>
            </tbody>
        </TABLE>
    </div>
</section>
