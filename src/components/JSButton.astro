---
const {
    type = "button",
    primary = false,
    class: className,
    ...rest
} = Astro.props;
---

<button
    type={type}
    class:list={[
        "w-fit flex items-center gap-2.5 px-4 py-1.5 rounded-lg md:text-lg font-bold cursor-pointer",
        { "text-white": primary },
        { "bg-blue": primary },
        { "text-blue": !primary },
        { "bg-white": !primary },
        className,
    ]}
    {...rest}
>
    <slot />
</button>
