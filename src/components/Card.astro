---
const {
    title,
    subtitle,
    href,
    photo,
    alt,
    class: className,
    ...rest
} = Astro.props;

import { Image } from "astro:assets";
---

<div
    class:list={["flex flex-col relative justify-end items-center", className]}
    {...rest}
>
    <div class="flex flex-col gap-3 py-6">
        <h5 class="text-2xl text-white font-bold z-10">{title}</h5>
        <p class="text-lg text-white font-bold z-10">{subtitle}</p>
        <a href={href} class="text-white font-bold z-10">
            Leggi di pi√π
            <i class="fas fa-arrow-right text-white"></i>
        </a>
    </div>
    <Image class="rounded-lg object-cover absolute" src={photo} alt={alt} />
</div>
